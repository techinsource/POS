
@{
    ViewData["Title"] = "AddExpanseCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-content">
            <div class="text-center col-lg-10">
                <a data-toggle="modal" onclick="ExpanseCategory()" class="btn btn-primary" href="#modal-form">Add ExpanseCategory</a>
            </div>
            <input id="myInput" type="text" placeholder="Search..">
            <div id="modal-form" class="modal fade" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-sm-12 b-r">
                                    <h3 class="m-t-none m-b">Category</h3>
                                    <form id="AddExpanseCategory" autocomplete="off">

                                        <input type="hidden" id="Id" name="Id">

                                        <div class="form-group">
                                            <label>Category Name:</label>
                                            <input type="text" id="Name" name="Name" placeholder="Enter Name" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label>Category Slug:</label>
                                            <input type="text" id="Slug" name="Slug" placeholder="Slug" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class="has-float-label">Select Parent</label>
                                            <select class="form-control " id="Parentcat" name="Parentcat">
                                                <option value="Select">Select Parent Category</option>
                                                @foreach (var item in ViewBag.Parentcat)
                                                {

                                                    <option value=@item.Name>@item.Name</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Category Details:</label>
                                            <input type="text" id="Details" name="Details" placeholder="Enter Details" class="form-control">
                                        </div>

                                        <div class="form-group">

                                            <label class="has-float-label">Status</label>

                                            <select class="form-control" id="Status" name="Status">

                                                <option value="Active">Active</option>
                                                <option value="InActive">InActive</option>
                                               
                                            </select>
                                        </div>

                                        <div class="form-group">
                                            <label>Category Order:</label>
                                            <input type="text" id="Order" name="Order" placeholder="0" class="form-control">
                                        </div>




                                        <div>
                                            <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="button" id="InsertExpanseCategory" onclick="AddExpanseCategory()" value="Save"><strong>Insert</strong></button>
                                            <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="button" id="UpdateExpanseCategory" onclick="UpdateExpanseCategorys()" value="Save"><strong>Update</strong></button>

                                        </div>
                                    </form>


                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <table class="table">
                <tr>

                    <th>Category Name</th>
                    <th>Category Order</th>

                    <th>Category Status</th>
                    <th>Category CreatedAt</th>


                    <th>Action</th>
                </tr>
                <tbody id="GetExpanseCategory"></tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/Wrapper/ExpanseCategory.js"></script>