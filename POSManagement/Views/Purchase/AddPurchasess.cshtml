
@{
    ViewData["Title"] = "AddPurchasess";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">

            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-wrench"></i>
                </a>

                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="text-center col-lg-10">
                <a data-toggle="modal" onclick="Purchasess()" class="btn btn-primary" href="#modal-form">Add Purchase</a>
            </div>
            <input id="myInput" type="text" placeholder="Search..">
            <div id="modal-form" class="modal fade" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-sm-12 b-r">
                                    <h3 class="m-t-none m-b">Purchasess</h3>
                                    <form id="AddPurchasess">
                                        <input type="hidden" id="Id" name="Id">
                                        <div class="form-group">
                                            <label>Date:</label>
                                            <input type="date" id="Date" name="Date" class="form-control" placeholder="Enter Date" required="">

                                        </div>
                                        <div class="form-group">
                                            <label>Ref No:</label>
                                            <input type="text" id="Referenceno" name="Referenceno" class="form-control" placeholder="Enter Referenceno" required="">

                                        </div>
                                        <div class="form-group">
                                            <label>Notes:</label>
                                            <input type="text" id="Notes" name="Notes" class="form-control" placeholder="Enter Notes" required="">

                                        </div>
                                        <div class="form-group col-md-12">

                                            <label class="has-float-label">Name</label>

                                            <select class="form-control" id="Suppliers" name="Suppliers">

                                                @foreach (var item in ViewBag.Suppliers)
                                                {


                                                    <option value=@item.Id>@item.Name</option>

                                                }


                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Item Barcode:</label>
                                            <input type="text" id="Code" name="Code" class="form-control" placeholder="Enter Barcode" onchange="PurchaseCode()" required="">

                                        </div>
                                        <div class="form-group">
                                            <label>Item:</label>
                                            <input type="text" id="Item" name="Item" readonly class="form-control" placeholder="Product" required="">

                                        </div>
                                        <div class="form-group">
                                            <label>Per Cost Price:</label>
                                            <input type="text" id="Cost_Price" name="Cost_Price" readonly class="form-control" placeholder="Price" required="">

                                        </div>
                                        <div class="form-group">
                                            <label>Per Retail Price:</label>
                                            <input type="text" id="Retail_Price" name="Retail_Price" readonly class="form-control" placeholder="Price" required="">

                                        </div>
                                        <div class="form-group">
                                            <label>Quantity:</label>
                                            <input type="text" id="Quantity" name="Quantity" class="form-control" placeholder="Quantity" required="">

                                        </div>

                                    </form>


                                </div>

                            </div>

                            <div>
                                <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="button" id="InsertPurchasess" onclick="AddPurchasess()" value="Save"><strong>Insert</strong></button>
                                <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="button" id="UpdatePurchasess" onclick="UpdatePurchasess()" value="Save"><strong>Update</strong></button>

                            </div>



                        </div>

                    </div>
                </div>
            </div>
            <table class="table">
                <tr>
                    <th>Date</th>
                    <th>Invoice Id</th>
                    <th>Suppliers</th>
                    <th>Amount</th>
                    <th>Paid Amount</th>
                    

                    <th>Action</th>

                </tr>
                <tbody id="GetPurchasess"></tbody>
            </table>
        </div>
    </div>


</div>
<script src="~/Wrapper/PurchageItem.js"></script>